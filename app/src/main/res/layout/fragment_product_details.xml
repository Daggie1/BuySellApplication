<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.activities.RecentMasterDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="23sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Image"/>
            <ImageView
                android:background="@drawable/photo_background"
                android:id="@+id/details_product_image"
                android:scaleType="centerCrop"

                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">
<TextView
    android:id="@+id/details_product_name"
    android:layout_gravity="start"
    android:textStyle="bold"
    android:textSize="16sp"
    android:gravity="start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
        <LinearLayout

            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/colorPrimary"
                android:text="ksh"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:textSize="16sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorPrimary"
            android:id="@+id/details_product_price"
            android:textStyle="bold"
            android:layout_gravity="end"


            android:textSize="16sp"

            android:layout_width="wrap_content"
            android:gravity="end"
            android:layout_height="wrap_content" />

        </LinearLayout>
            </LinearLayout>
            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView

            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"/>
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/details_product_desc"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView

            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="320dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sellers location"/>
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/markertxt"

                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
                <fragment
                    android:id="@+id/details_product_map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                />

            </LinearLayout>

        </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
    <Button
        android:id="@+id/details_buy_btn"
        android:text="Buy"
        android:textColor="@color/colorWhite"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"/>
                <Button
                    android:id="@+id/details_chat_btn"
                    android:text="Chat"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/coloblue"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>