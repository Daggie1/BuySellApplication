<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colodarkish"
    android:orientation="vertical"
    tools:context=".UI.fragments.PestAndDiseasesFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:text="Major Tomatoe Pest"
                android:textSize="23sp"
                android:textStyle="normal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/aphid"
                    android:scaleType="centerCrop"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

                <TextView
                    android:text="Aphids"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    /></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"

                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/cutworm"
                        android:scaleType="centerCrop"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <TextView
                        android:text="Cutworms"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        /></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"

                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/flea"
                            android:scaleType="centerCrop"
                            android:layout_width="70dp"
                            android:layout_height="70dp" />

                        <TextView
                            android:text="Flea Bettles"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            /></LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp"

                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/nematode"
                                android:scaleType="centerCrop"
                                android:layout_width="70dp"
                                android:layout_height="70dp" />

                            <TextView
                                android:text="Nematodes"
                                android:textSize="16sp"
                                android:textStyle="normal"
                                android:layout_marginLeft="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                /></LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
